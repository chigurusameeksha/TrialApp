<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/urgent_map"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/urgent_care_map" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/map_facility_name"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:paddingBottom="2dp"
            android:text="Access Community Health Center"
            android:textColor="@color/blue"
            android:textSize="20dp" />


        <ImageButton
            android:id="@+id/share_btn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fave_btn"
            android:alpha="0.35"
            android:background="@null"
            android:paddingRight="12dp"
            android:layout_marginLeft="14dp"
            android:paddingTop="12dp"
            android:src="@drawable/share_variant" />


        <ImageButton
            android:id="@+id/fave_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="0.35"
            android:background="@null"
            android:baselineAlignBottom="true"
            android:layout_marginLeft="3dp"
            android:paddingRight="4dp"
            android:paddingTop="6dp"
            android:src="@drawable/heart" />


    </LinearLayout>


    <TextView
        android:id="@+id/map_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:layout_marginTop="4dp"
        android:text="32-03 39th Ave, Long Island City, NY 11101"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/urg_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/urg_address"
        android:layout_marginTop="4dp"
        android:text="718-730-1002"
        android:textSize="16dp" />






</LinearLayout>