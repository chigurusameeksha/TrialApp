<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_cost_of_service"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/fee_level_text_size"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/tv_q_cost_of_procedure"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp" />

        <Spinner
            android:id="@+id/spn_select_service"
            android:layout_width="@dimen/medium_text_tv_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/tv_question_select_service"
            android:layout_centerHorizontal="true"
            android:spinnerMode="dialog"/>

        <TextView
            android:id="@+id/tv_q_cost_of_procedure"
            android:text="@string/based_on_your_hhc_fee_level_the_cost_of_this_service_will_be"
            android:textSize="@dimen/heading_medium_text_size"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:layout_width="@dimen/medium_text_tv_size"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/spn_select_service"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_question_select_service"
            android:text="@string/please_select_a_service"
            android:textSize="@dimen/heading_medium_text_size"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:layout_width="@dimen/medium_text_tv_size"
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tv_q_cost_of_procedure" />

    </RelativeLayout>

</LinearLayout>